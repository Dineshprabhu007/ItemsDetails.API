
@{
}

@model IEnumerable<ItemsDetails.UI.Models.DTO.ItemsDetailsDTO>

@{
}

<h1 class="mt-3">Items</h1>
<div class="d-flex justify-content-start">
    <a class="btn btn-secondary" style="background-color: #04AA6D; border-color: #04AA6D; color: white;" asp-controller="ItemsDetails" asp-action="Add">Add Item</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Description</th>
            <th>Item_Number</th>
            <th>Display_Item_Number</th>
            <th>Price</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.Item_Number</td>
                <td>@item.Display_Item_Number</td>
                <td>@item.Price</td>
                <td>
                    <a asp-controller="ItemsDetails" asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-light" style="background-color: #04AA6D; border-color: #04AA6D; color: white;">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
